<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pago_enganche_receive_wizard_form" model="ir.ui.view">
        <field name="name">pago.enganche.receive.wizard.form</field>
        <field name="model">pago.enganche.receive.wizard</field>
        <field name="arch" type="xml">
            <form string="Recibir Pago">
                <group>
                    <field name="amount" readonly="1" string="Monto programado"/>
                    <field name="amount_received"/>
                    <field name="received_date"/>
                    <field name="journal_id"/>
                    <field name="payment_type_id"/>
                    <field name="banco_emisor_id"/>
                    <field name="boleta"/>
                    <field name="attachment" filename="attachment_name" required="true"/>
                    <field name="attachment_name" invisible="1" />
                </group>
                <footer>
                    <button string="Confirmar" name="action_confirm" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo> 