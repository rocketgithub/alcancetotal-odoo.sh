<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_real_estate" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.real.estate</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='sale_management']" position="inside">
                <h2>Propiedades inmobiliarias</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="enable_real_estate"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="enable_real_estate"/>
                            <div class="text-muted">
                                Habilitar la gestión de propiedades inmobiliarias en órdenes de venta
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>