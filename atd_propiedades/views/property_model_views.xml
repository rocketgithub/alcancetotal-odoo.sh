<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_property_model_tree" model="ir.ui.view">
        <field name="name">real.estate.property.model.tree</field>
        <field name="model">real.estate.property.model</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_property_model_form" model="ir.ui.view">
        <field name="name">real.estate.property.model.form</field>
        <field name="model">real.estate.property.model</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nombre del Modelo"/>
                        </h1>
                    </div>
                    <group>
                        <field name="description"/>
                    </group>
                    <notebook>
                        <page string="Propiedades">
                            <field name="property_ids" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="property_type_id"/>
                                    <field name="state"/>
                                    <field name="price"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_property_model_search" model="ir.ui.view">
        <field name="name">real.estate.property.model.search</field>
        <field name="model">real.estate.property.model</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <separator/>
                <filter string="Archivado" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_property_models" model="ir.actions.act_window">
        <field name="name">Modelos de Propiedad</field>
        <field name="res_model">real.estate.property.model</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea el primer modelo de propiedad!
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_property_models"
              name="Modelos de Propiedad"
              parent="sale.menu_sale_config"
              action="action_property_models"
              sequence="24"/>
</odoo> 