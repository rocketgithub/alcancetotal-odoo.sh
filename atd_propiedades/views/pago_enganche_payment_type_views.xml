<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pago_enganche_payment_type_tree" model="ir.ui.view">
        <field name="name">pago.enganche.payment.type.tree</field>
        <field name="model">pago.enganche.payment.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_pago_enganche_payment_type_form" model="ir.ui.view">
        <field name="name">pago.enganche.payment.type.form</field>
        <field name="model">pago.enganche.payment.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button"/>
                        </button>
                    </div>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="has_retention"/>
                        <field name="retention_percentage" attrs="{'invisible': [('has_retention', '=', False)]}"/>
                        <field name="retention_account_id" attrs="{'invisible': [('has_retention', '=', False)], 'required': [('has_retention', '=', True)]}"/>
                    </group>
                    
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_pago_enganche_payment_type" model="ir.actions.act_window">
        <field name="name">Tipos de Pago</field>
        <field name="res_model">pago.enganche.payment.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu item under Sales Configuration -->
    <menuitem id="menu_pago_enganche_payment_type"
              name="Tipos de Pago de Enganche"
              action="action_pago_enganche_payment_type"
              parent="sale.menu_sale_config"
              sequence="40"/>
</odoo> 