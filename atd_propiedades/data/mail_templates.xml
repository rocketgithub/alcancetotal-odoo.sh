<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="email_template_pago_enganche" model="mail.template">
            <field name="name">Pago Enganche - Recibo de caja</field>
            <field name="model_id" ref="model_pago_enganche"/>
            <field name="subject">Recibo de caja  - {{ object.name }}</field>
            <field name="email_from">{{ user.email_formatted }}</field>
            <field name="email_to">{{ object.order_id.partner_id.email }}</field>
            <field name="body_html" type="html">
                <div>
                    <p>Estimado(a) {{ object.order_id.partner_id.name }},</p>
                    <p>Adjunto encontrar√° el comprobante de su cuota de enganche.</p>
                    <p>Saludos cordiales</p>
                </div>
            </field>
        </record>
    </data>
</odoo> 