<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_acuerdo_compra_venta">
    
        <t t-call="web.basic_layout">
            
            <t t-foreach="docs" t-as="doc">
                
                <t t-call="atd_propiedades.report_acuerdo_compra_venta_document"/>
            </t>
        </t>
    </template>

    <template id="report_acuerdo_compra_venta_document">
        <t t-call="atd_propiedades.common_report_styles"/>

        <t t-set="condiciones">
            <div class="section-header">Condiciones de Venta</div>
            <table class="data-table">
                <tr>
                    <td><strong>Precio Total:</strong></td>
                    <td class="text-right"><span t-field="doc.order_id.amount_total" t-options='{"widget": "monetary", "display_currency": doc.order_id.currency_id}'/></td>
                    <td><strong>Tipo de Crédito:</strong></td>
                    <td class="text-right"><span t-field="doc.order_id.tipo_credito"/></td>
                </tr>
                <tr>
                    <td><strong>Porcentaje Enganche:</strong></td>
                    <td class="text-right"><span t-esc="doc.order_id.enganche_percentage *100" /> %</td>
                    <td><strong>Banco:</strong></td>
                    <td class="text-right"><span t-field="doc.order_id.banco_credito_id.name"/></td>
                </tr>
                <tr>
                    <td><strong>Monto Enganche total:</strong></td>
                    <td class="text-right"><span t-field="doc.order_id.enganche_amount" t-options='{"widget": "monetary", "display_currency": doc.order_id.currency_id}'/></td>
                    <td><strong>Cuotas de:</strong></td>
                    <td class="text-right"><span t-field="doc.order_id.remaining_payment_amount" t-options='{"widget": "monetary", "display_currency": doc.order_id.currency_id}'/></td>
                </tr>
                <tr>
                    <td><strong>Número de Pagos:</strong></td>
                    <td class="text-right"><span t-field="doc.order_id.enganche_payments"/></td>
                    <td><strong>Reserva:</strong></td>
                    <td class="text-right"><span t-field="doc.order_id.first_payment_amount" t-options='{"widget": "monetary", "display_currency": doc.order_id.currency_id}'/></td>
                </tr>
                <tr>
                    <td colspan="4">Saldo pendiente de <strong><span t-field="doc.order_id.remaining_balance" t-options='{"widget": "monetary", "display_currency": doc.order_id.currency_id}'/></strong> a ser cancelado por el comprador al momento de la escrituración.</td>
                </tr>
            </table>

            <div class="section-header section-header-secondary">Plan de Pagos de Enganche</div>
            <table class="data-table table-striped">
                <thead>
                    <tr>
                        <td style="width: 16.66%;" class="text-center"><strong>No.</strong></td>
                        <td style="width: 16.66%;" class="text-center"><strong>Fecha</strong></td>
                        <td style="width: 16.66%;" class="text-right"><strong>Monto</strong></td>
                        <td style="width: 16.66%;" class="text-center"><strong>No.</strong></td>
                        <td style="width: 16.66%;" class="text-center"><strong>Fecha</strong></td>
                        <td style="width: 16.66%;" class="text-right"><strong>Monto</strong></td>
                    </tr>
                </thead>
                <tbody>
                    <t t-set="pagos" t-value="doc.order_id.pago_enganche_ids.filtered(lambda p: p.state in ['scheduled', 'due', 'received']).sorted(key=lambda p: p.payment_number)"/>
                    <t t-set="half_length" t-value="len(pagos) // 2 + len(pagos) % 2"/>
                    <t t-foreach="range(half_length)" t-as="i">
                        <tr>
                            <!-- Left column payment -->
                            <td style="width: 16.66%;" class="text-center"><span t-field="pagos[i].payment_number"/></td>
                            <td style="width: 16.66%;" class="text-center"><span t-field="pagos[i].expected_date" t-options='{"format": "dd/MM/yyyy"}'/></td>
                            <td style="width: 16.66%;" class="text-right"><span t-field="pagos[i].amount" t-options='{"widget": "monetary", "display_currency": doc.order_id.currency_id}'/></td>
                            
                            <!-- Right column payment (if exists) -->
                            <t t-if="i + half_length &lt; len(pagos)">
                                <td style="width: 16.66%;" class="text-center"><span t-field="pagos[i + half_length].payment_number"/></td>
                                <td style="width: 16.66%;" class="text-center"><span t-field="pagos[i + half_length].expected_date" t-options='{"format": "dd/MM/yyyy"}'/></td>
                                <td style="width: 16.66%;" class="text-right"><span t-field="pagos[i + half_length].amount" t-options='{"widget": "monetary", "display_currency": doc.order_id.currency_id}'/></td>
                            </t>
                            <t t-else="">
                                <td style="width: 16.66%;"> </td>
                                <td style="width: 16.66%;"> </td>
                                <td style="width: 16.66%;"> </td>
                            </t>
                        </tr>
                    </t>
                </tbody>
            </table>

            <div class="section-header">Observaciones</div>
